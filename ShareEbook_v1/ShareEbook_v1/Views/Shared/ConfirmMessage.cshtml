@model string
@{
    Layout = null;
    string[] str = Model.Split(',', 3);
    string message = str[0].Replace(',', ' ').Trim();
    string action = str[1].Replace(',', ' ').Trim();
    string ctl = str[2].Replace(',', ' ').Trim();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Confirm Message - ShareEbook_v1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    
    <div class="container">
        <main role="main" class="pb-3 mt-2">
            <h2>@message</h2>
            <a class="btn btn-primary" asp-area="" asp-controller="@ctl" asp-action="@action">Ok</a>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; Hydro 2022 - ShareEbook_v1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Quyền riêng tư</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
