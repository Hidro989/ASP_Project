
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShareEbook_v1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ShareEbook_v1</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse d-flex justify-content-between">

                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(ViewBag.Username))
                        {
                            <li class="nav-item ">
                                <div class="dropdown show">
                                    <button class="btn btn-info p-auto dropdown-toggle" type="button" data-toggle="dropdown" data-bs-toggle="dropdown" id="dropdownmenu" aria-expanded="false">
                                        @ViewData["Username"]
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownmenu">
                                        <li><a class="dropdown-item" asp-controller="Posts" asp-action="Create">Đăng tài liệu</a></li>
                                        <li><a class="dropdown-item" asp-controller="User" asp-action="Edit" asp-route-username="@ViewData["Username"]">Thông tin tài khoản</a></li>
                                        <li><a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword" asp-route-username="@ViewData["Username"]">Đổi mật khẩu</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Logout">Đăng xuất</a></li>
                                    </ul>
                                </div>

                            </li>
                        }
                        else
                        {

                            <li class="nav-item ">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Đăng ký</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Quyền riêng tư</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; Hydro 2022 - ShareEbook_v1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Quyền riêng tư</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
