@model List<Account>
<nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <div class="container-fluid">   
          <a class="btn btn-info" asp-route-type="active">
            <i class="fas fa-align-left"></i>
            <span>Hoạt động</span>
        </a>
        <a class="btn btn-info" asp-route-type="banded">
            <i class="fas fa-align-left"></i>
            <span>Bị cấm</span>
        </a>
        <a class="btn btn-info" asp-route-type="">
            <i class="fas fa-align-left"></i>
            <span>Tất cả</span>
        </a>
    </div>
</nav>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Tên người dùng</th>
      <th scope="col">Email</th>
      <th scope="col">PhoneNumber</th>
      <th scope="col">Tên tài khoản</th>
      <th scope="col">Hành động</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
      <th scope="row">@item.User.Id</th>
      <td>@item.User.Name</td>
      <td>@item.User.Email</td>
      <td>@item.User.PhoneNumber</td>
      <td>@item.Username</td>
      <td>
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" data-id="@item.User.Id">Xóa</button>
      </td>
    </tr>
    }
  </tbody>
</table>
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Chú ý</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            Bạn có chắc chắn muốn xoá?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Không</button>
            <a class="btn btn-primary bg-danger" id="sender2">Xóa</a>
          </div>
        </div>
      </div>
    </div>
<script>
      $('#deleteModal').on('show.bs.modal', function (event) {
     var button = $(event.relatedTarget)
      var recipient = button.data('id')
      var modal = $(this)
      modal.find("#sender2").attr("href","/User/Delete/" + recipient);
      })
</script>