@model ShareEbook_v1.ViewModels.RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng ký</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <section class="vh-100" style="background-color: #eee;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Đăng ký</p>
                                    @if(ViewBag.ErrorMessage != null){
			                            <span class="text-danger">@ViewData["ErrorMessage"]</span>
		                                }
                                    <form class="mx-1 mx-md-4" method="post">

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" id="form3Example1c" class="form-control" asp-for="Username" />
                                                <label asp-for="Username" class="form-label" for="form3Example1c">Tên người dùng</label>
                                                <span asp-validation-for="Username" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input asp-for="Password" type="password" id="form3Example3c" class="form-control" />
                                                <label asp-for="Password" class="form-label" for="form3Example3c">Mật khẩu</label>
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input asp-for="Name" type="text" id="form3Example4c" class="form-control" />
                                                <label asp-for="Name" class="form-label" for="form3Example4c">Họ tên</label>
                                                <span asp-validation-for="Name" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input asp-for="Email" type="email" id="form3Example4cd" class="form-control" />
                                                <label asp-for="Email" class="form-label" for="form3Example4cd">Email</label>
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input asp-for="Phonenumber" id="form3Example4cd" class="form-control" />
                                                <label asp-for="Phonenumber" class="form-label" for="form3Example4cd">Số điện thoại</label>
                                                <span asp-validation-for="Phonenumber" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input asp-for="Birthday" id="form3Example4cd" class="form-control" />
                                                <label asp-for="Birthday" class="form-label" for="form3Example4cd">Ngày sinh</label>
                                                <span asp-validation-for="Birthday" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                
                                                <select asp-for="Gender" class="form-select w-100"  aria-label=".form-select-lg example">
                                                    <option value="@Gender.Male">Nam</option>
                                                    <option value="@Gender.Female">Nữ</option>
                                                    <option value="@Gender.Other">Khác</option>
                                                </select>
                                                <label asp-for="Gender">Giới tính</label>
                                                <span asp-validation-for="Gender"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            
                                        </div>
                                        @*<div class="form-check d-flex justify-content-center mb-5">
                                            <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" />
                                            <label class="form-check-label" for="form2Example3">
                                                I agree all statements in <a href="#!">Terms of service</a>
                                            </label>
                                        </div>*@

                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4 ">
                                            <button type="submit" class="btn btn-primary btn-lg">Đăng ký</button>
                                            <a class="btn btn-success btn-lg mx-1" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                                        </div>
                                    </form>

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                         class="img-fluid" alt="Sample image">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

